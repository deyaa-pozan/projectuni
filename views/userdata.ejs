<%- include('partials/header'); -%>



    <!-- ORDER DATA-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <h4>Order Table</h4>
                    <div class="col-lg-12" style="overflow-x:auto;">
                        <table id="table_user" class="table table-bordred table-striped" style="overflow-x:auto; ">
                            <thead>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Date</th>
                                <th>Verified</th>
                                <th>Delete</th>
                            </thead>
                            <tbody>

                                <% for (var i=0; i < countuser; i++ ) { %>
                                    <tr id="<%=founduser[i]._id %>">
                                        <td>
                                            <%=founduser[i].username%>
                                        </td>
                                        <td>
                                            <%=founduser[i].email%>
                                        </td>
                                        <td>
                                            <%=founduser[i].date.toISOString().replace( /T/, ' ' ).replace(/\..+/, ''
                                                )%>
                                        </td>
                                        <td>
                                            <%=founduser[i].isVerified%>
                                        </td>

                                        <td>
                                            <p data-placement="top" data-toggle="tooltip" title="Delete"><a
                                                    href="/deleteuser/<%=founduser[i]._id %>"><button
                                                        class="fa fa-trash" data-title="Delete" data-toggle="modal"
                                                        data-id="<%=founduser[i]._id %>" id="deleteuser"><span
                                                            class="glyphicon glyphicon-trash"></span></button></p>
                                        </td>

                                        <% } %>

                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>

    <!-- END ORDER DATA-->

    <!-- END PAGE CONTAINER-->

    </div>

    <%- include('partials/footer'); -%>