<%- include('partials/headerpublic'); -%>
    <!-- Breadcrumb Section Begin -->

    <!-- Breadcrumb Section End -->

    <!-- Product Details Section Begin -->
    <section class="product-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__pic">
                        <div class="product__details__pic__item">
                            <img class="product__details__pic__item--large" src="/<%=found.img[0]%>" alt="">
                        </div>
                        <% if(found.img.length!=1 ){%>
                            <div class="product__details__pic__slider owl-carousel">




                                <img data-imgbigurl="/<%=found.img[0]%>" src="/<%=found.img[0]%>" alt="">

                            </div>
                            <% } %>
                    </div>

                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__text">
                        <h3>
                            <%=found.captiond%>
                        </h3>
                        <div class="product__details__rating">
                            <% for (var i=0; i < found.review; i++ ) { %>

                                <i class="fa fa-star"></i>

                                <%}%>
                                    <i class="fa fa-star-half-o"></i>
                                    <span>(18 reviews)</span>
                        </div>

                        <div class="product__details__price">
                            <%=found.priced%>
                        </div>
                        <p>
                            <%=found.descriptiond%>
                        </p>
                       
                        
                        <a data-id="<%=found._id %>" id="add" href="/add/<%=found._id%>"
                            class="primary-btn <%=found._id %>">ADD TO CARD</a>
                        <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                        <ul>
                            <li><b>Availability</b> <span>
                                    <%=found.stored%> piece
                                </span></li>
                            <li><b>Shipping</b> <span>01 day shipping. <samp>Free pickup today</samp></span></li>

                            <li><b>Share on</b>
                                <div class="share">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                
                    </div>
                </div>
            
    </section>
    <!-- Product Details Section End -->

    <!-- Related Product Section Begin -->
    <section class="related-product">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title related__product__title">
                        <h2>Related Product</h2>
                    </div>
                </div>
            </div>
            <div class="row featured__filter categories__slider owl-carousel">
                <% for (var i=0; i < count; i++ ) { %>

                    <div class="col-lg-3 col-md-4 col-sm-6 mix  fresh-meat">


                        <div class="featured__item">

                            <div class="featured__item__pic set-bg" data-setbg="/<%=foundrelated[i].img[0]%>">

                                <ul class="featured__item__pic__hover">
                                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="/shop-details/<%=foundrelated[i]._id%>"><i class="fa fa-eye"></i></a>
                                    </li>
                                    <li><a href="/add/<%=foundrelated[i]._id%>"><i class="fa fa-shopping-cart"></i></a>
                                    </li>
                                </ul>
                            </div>

                            <div class="featured__item__text">
                                <h6><a href="#">
                                        <%=foundrelated[i].captiond%>
                                    </a></h6>
                                <h5>$<%=foundrelated[i].priced%>
                                </h5>
                            </div>
                        </div>

                    </div>
                    <%}%>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title related__product__title">
                        <h2>Last seen</h2>
                    </div>
                </div>
            </div>
            <div class="row featured__filter categories__slider owl-carousel">
                <% for (var i=0; i < lastseen.length; i++ ) { %>

                    <div class="col-lg-3 col-md-4 col-sm-6 mix  fresh-meat">


                        <div class="featured__item">

                            <div class="featured__item__pic set-bg" data-setbg="/<%=lastseen[i].image%>%>">

                                <ul class="featured__item__pic__hover">
                                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                    <li><a href="/shop-details/<%=lastseen[i].barcode%>"><i class="fa fa-eye"></i></a>
                                    </li>
                                    <li><a href="/add/<%=lastseen[i].barcode%>"><i class="fa fa-shopping-cart"></i></a>
                                    </li>
                                </ul>
                            </div>

                            <div class="featured__item__text">
                                <h6><a href="#">
                                        <%=lastseen[i].caption%>
                                    </a></h6>
                                <h5>$<%=lastseen[i].price%>
                                </h5>
                            </div>
                        </div>

                    </div>

                    <%}%>
            </div>
        </div>
    </section>
    <!-- Related Product Section End -->

    <%- include('partials/footerpublic'); -%>