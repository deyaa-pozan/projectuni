<%- include('partials/header'); -%>



    <!-- ORDER DATA-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <h4>Order Table</h4>
                    <div class="col-lg-12" style="overflow-x:auto;">
                        <table id="table_order" class="table table-bordred table-striped"
                            style="overflow-x:auto; display: block;">

                            <thead>

                                <th>Name</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Total Price</th>
                                <th>Number Phone</th>
                                <th>Note</th>
                                <th>Date</th>
                                <th>Order</th>

                                <th>Status</th>

                                <th>Delete</th>
                            </thead>
                            <tbody>

                                <% for (var i=0; i < countorder; i++ ) { %>
                                    <tr id="<%=foundorder[i]._id %>">


                                        <td>
                                            <%=foundorder[i].fullname%>
                                        </td>
                                        <td>
                                            <%=foundorder[i].email%>
                                        </td>
                                        <td>
                                            <%=foundorder[i].address%>
                                        </td>
                                        <td>
                                            <%=foundorder[i].total%>
                                        </td>
                                        <td>
                                            <%=foundorder[i].numphone%>
                                        </td>
                                        <td>
                                            <%=foundorder[i].note%>
                                        </td>
                                        <td>
                                            <%=foundorder[i].date%>
                                        </td>
                                        <td>
                                            <div class="noti__item js-item-menu">
                                                <i class="zmdi zmdi-shape"></i>
                                                <span class="quantity">
                                                    <%=foundorder[i].product.length%>
                                                </span>
                                                <div class="notifi-dropdown js-dropdown">
                                                    <div class="notifi__title">
                                                        <p>You have <%=foundorder[i].product.length%> product</p>
                                                    </div>
                                                    <% for (var j=0; j < foundorder[i].product.length; j++ ) { %>
                                                        <div class="notifi__item">
                                                            <div class="bg-c1 img-cir img-40">
                                                                <img style="width: 100px; height: 100px;"
                                                                    src="/<%=foundorder[i].product[j].image%>" alt="">
                                                            </div>
                                                            <div class="content">
                                                                <p>
                                                                    <%=foundorder[i].product[j].caption%>
                                                                </p>
                                                                <span>Quantity :<span
                                                                        style="color: red; font-weight: bold;">
                                                                        <%=foundorder[i].product[j].qy%>
                                                                    </span></span>
                                                            </div>
                                                        </div>

                                                        <% } %>
                                                </div>
                                            </div>
                                        </td>

                                        <td>
                                            <p data-placement="top" data-toggle="tooltip" title="DONE"><a
                                                    href="/edit/<%=foundorder[i]._id%>"><button onclick="myFunction()"
                                                        class=" fa fa-check " data-title="DONE" data-toggle="modal"
                                                        data-target="#edit"><span
                                                            class="glyphicon glyphicon-pencil"></span></button></a></p>
                                            <p data-placement="top" data-toggle="tooltip" title="CANCEL"><a
                                                    href="/edit/<%=foundorder[i]._id%>"><button onclick="myFunction()"
                                                        class=" fa fa-times " data-title="CANCEL" data-toggle="modal"
                                                        data-target="#edit"><span
                                                            class="glyphicon glyphicon-pencil"></span></button></a></p>
                                        </td>

                                        <td>
                                            <p data-placement="top" data-toggle="tooltip" title="Delete"><a
                                                    href="/deleteorder/<%=foundorder[i]._id %>"><button
                                                        class="fa fa-trash" data-title="Delete" data-toggle="modal"
                                                        data-id="<%=foundorder[i]._id %>" id="deleteorder"><span
                                                            class="glyphicon glyphicon-trash"></span></button></p>
                                        </td>
                                    </tr>

                                    <% } %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    </div>

    <!-- END ORDER DATA-->

    <!-- END PAGE CONTAINER-->

    </div>

    <%- include('partials/footer'); -%>