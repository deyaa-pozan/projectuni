<%- include('partials/headerpublic'); -%>


    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-md-7">
                    <div class="filter__item">
                        <div class="row">
                            <div class="col-lg-4 col-md-5">

                            </div>
                            <div class="col-lg-4 col-md-4">
                                <div class="filter__found">
                                    <h6><span>
                                            <%=countall%>
                                        </span> Products found</h6>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-3">
                                <div class="filter__option">
                                    <span class="icon_grid-2x2"></span>
                                    <span class="icon_ul"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        
                        <% for (var i=0; i < count; i++ ) { %>

                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg col-lg-9 " data-setbg="/<%=found[i].img[0]%>">
                                        <%if(found[i].stored> 0){%>
                                            <ul class="product__item__pic__hover">
                                                
                                                <li><a href="/shop-details/<%=found[i]._id%>"><i
                                                            class="fa fa-eye"></i></a>
                                                </li>
                                                <li data-id="<%=found[i]._id %>" id="add"><a
                                                    href="/add/<%=found[i]._id%>"><i
                                                        class="fa fa-shopping-cart <%=found[i]._id %>"></i></a></li>
                                            </ul>
                                            <% } %>
                                    </div>

                                    <div class="product__item__text col-lg-9">
                                        <%if(found[i].stored> 0){%>
                                            <h6><a href="#">
                                                    <%=found[i].captiond%>
                                                </a></h6>

                                            <%if(found[i].discount!==0){%>
                                                <h5
                                                    style="text-decoration: line-through; text-decoration-color: red;text-decoration-style: double;">
                                                    <%=(found[i].priced*1).toFixed(2);%>
                                                </h5>
                                                <h5 class="priceitem<%=found[i]._id %>">
                                                    <%=(found[i].priced * (1-found[i].discount)).toFixed(2);%>
                                                        <h5 class="text-success">JOD</h5>
                                                </h5>
                                                <% }else{ %>
                                                    <h5 class="priceitem<%=found[i]._id %>">
                                                        <%=found[i].priced%>
                                                            <h5 class="text-success">JOD</h5>
                                                    </h5>
                                                    <% } %>
                                                        <%}else{%>
                                                             <h4 class="text-danger font-weight-bold">not available <i class="fas fa-exclamation-circle text-danger"></i></h4>
                                                            <% } %>

                                    </div>

                                </div>
                            </div>
                            <%}%>   
                    </div>
                    <div class="product__pagination  ">
                       <a class="/shop-grid/<%=department%>?page=1&limit=9 pagecolor " id="pagination" href='/shop-grid/<%=department%>?page=1&limit=9'>1</a>

                        <% for (var i=1; i < (countall/9); i++ ) { %>
                        <a class="/shop-grid/<%=department%>?page=<%=i+1%>&limit=9" id="pagination" href='/shop-grid/<%=department%>?page=<%=i+1%>&limit=9'><%=i+1%></a>
                        <%}%>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Product Section End -->

    <%- include('partials/footerpublic'); -%>