    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-5">
                    <div class="sidebar">
                        <div class="sidebar__item">
                            <h4>Department</h4>
                            <ul>
                                <li><a href="/shop-grid/Super Market">Super Market</a></li>
                                <li><a href="/shop-grid/Drinks">Drinks</a></li>
                                <li><a href="/shop-grid/Dairy">Dairy</a></li>
                                <li><a href="/shop-grid/Vegetables and fruits">Vegetables and fruits</a></li>
                                <li><a href="/shop-grid/Cleaning-products">Cleaning products</a></li>
                                <li><a href="/shop-grid/meat">meat</a></li>
                                <li><a href="/shop-grid/preserves">preserves</a></li>

                            </ul>
                        </div>

                    </div>
                </div>
                <div class="col-lg-9 col-md-7">
                    <div class="filter__item">
                        <div class="row">
                            <div class="col-lg-4 col-md-5">
                                <div class="filter__sort">
                                    <span>Sort By</span>
                                    <select>
                                        <option value="0">Default</option>
                                        <option value="0">Default</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <div class="filter__found">
                                    <h6><span>
                                            <%=count%>
                                        </span> Products found</h6>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-3">
                                <div class="filter__option">
                                    <span class="icon_grid-2x2"></span>
                                    <span class="icon_ul"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <% for (var i=0; i < count; i++ ) { %>
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg" data-setbg="/<%=found[i].img[0]%>">
                                        <ul class="product__item__pic__hover">
                                            <li><a href="/addheart/<%=found[i]._id%>"><i class="fa fa-heart"></i></a>
                                            </li>
                                            <li><a href="/shop-details/<%=found[i]._id%>"><i class="fa fa-eye"></i></a>
                                            </li>
                                            <li data-id="<%=found[i]._id %>" id="add"><a
                                                    href="/add/<%=found[i]._id%>"><i
                                                        class="fa fa-shopping-cart <%=found[i]._id %>"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="product__item__text">
                                        <h6><a href="#">
                                                <%=found[i].captiond%>
                                            </a></h6>

                                        <%if(found[i].discount!==0){%>
                                            <h5
                                                style="text-decoration: line-through; text-decoration-color: red;text-decoration-style: double;">
                                                <%=(found[i].priced*1).toFixed(2);%>
                                            </h5>
                                            <h5>
                                                <%=(found[i].priced * (1-found[i].discount)).toFixed(2);%>
                                                    <h5 class="text-success">JOD</h5>
                                            </h5>
                                            <% }else{ %>
                                                <h5>
                                                    <%=found[i].priced%>
                                                        <h5 class="text-success">JOD</h5>
                                                </h5>
                                                <% } %>




                                    </div>
                                </div>
                            </div>
                            <%}%>

                    </div>
                    <div class="product__pagination">
                        <a href="#">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#"><i class="fa fa-long-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Product Section End -->

    <%- include('partials/footerpublic'); -%>